# =====================================================
# AGROSHOP - VARIABLES DE ENTORNO
# =====================================================

# =====================================================
# BASE DE DATOS
# =====================================================
# Para desarrollo local:
# DATABASE_URL="postgresql://usuario:password@localhost:5432/agroshop"
#
# Para Supabase:
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"
#
# Para Neon:
# DATABASE_URL="postgresql://[user]:[password]@[endpoint].neon.tech/[dbname]"

DATABASE_URL="postgresql://usuario:password@localhost:5432/agroshop_db"

# =====================================================
# NEXTAUTH.JS
# =====================================================
# URL de la aplicación (cambiar en producción)
NEXTAUTH_URL="http://localhost:3000"

# Secret para JWT (generar con: openssl rand -base64 32)
# IMPORTANTE: Cambiar este valor en producción
NEXTAUTH_SECRET="tu-secret-super-seguro-aqui-cambiar-en-produccion"

# =====================================================
# CLOUDINARY (Opcional - para subir imágenes)
# =====================================================
# Obtener en: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# =====================================================
# RESEND (Opcional - para enviar emails)
# =====================================================
# Obtener en: https://resend.com/api-keys
RESEND_API_KEY=""

# =====================================================
# SENTRY (Opcional - para monitoreo de errores)
# =====================================================
# Obtener en: https://sentry.io
SENTRY_DSN=""

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================
NEXT_PUBLIC_APP_NAME="AgroShop SENA"
NEXT_PUBLIC_IVA_PERCENTAGE="19"
NEXT_PUBLIC_STOCK_BAJO_UMBRAL="10"
NEXT_PUBLIC_DIAS_ALERTA_VENCIMIENTO="7"

# =====================================================
# MODO DE DESARROLLO
# =====================================================
# Cambiar a 'production' en producción
NODE_ENV="development"

# =====================================================
# CRON JOBS (Vercel)
# =====================================================
# Secret para autenticar llamadas automáticas de Vercel Cron
# Generar con: openssl rand -base64 32
# IMPORTANTE: Cambiar en producción y agregar en Vercel Dashboard
CRON_SECRET="tu-cron-secret-cambiar-en-produccion"

# =====================================================
# IMPRESORA TÉRMICA Y CAJA REGISTRADORA
# =====================================================
# Puerto COM donde está conectada la impresora (Windows)
# Ejemplos: COM1, COM2, COM3, COM4, etc.
# En Linux/Mac sería algo como: /dev/ttyUSB0 o /dev/ttyS0
PRINTER_PORT="COM3"

# Velocidad de comunicación (baud rate)
# Valores comunes: 9600, 19200, 38400, 115200
PRINTER_BAUD_RATE="9600"
